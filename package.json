{
  "name": "react-smart-hooks",
  "version": "1.0.1",
  "description": "A collection of lightweight, TypeScript-first, production-ready React hooks for modern web apps.",
  "type": "module",
  "main": "./dist/react-smart-hooks.umd.cjs",
  "module": "./dist/react-smart-hooks.js",
  "exports": {
    ".": {
      "import": "./dist/react-smart-hooks.js",
      "require": "./dist/react-smart-hooks.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "react",
    "react hooks",
    "custom hooks",
    "typescript",
    "useDebounce",
    "useToggle",
    "useLocalStorage",
    "react utilities",
    "react-smart-hooks",
    "frontend",
    "web development",
    "vite",
    "react custom hooks"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/react-smart-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/react-smart-hooks/issues"
  },
  "homepage": "https://github.com/your-username/react-smart-hooks#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext .ts --ignore-pattern dist/",
    "lint:fix": "npm run lint --fix",
    "test": "vitest run --coverage",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.15.0",
    "husky": "^8.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@testing-library/react": "^16.3.0",
    "vitest": "^3.1.4"
  }
}
